<p id="notice"><%= notice %></p>

<h1>Dishes</h1>

<table>
  <thead>
    <tr>
      <th>Dish name</th>
      <th>Description</th>
      <th>Cuisine</th>
      <th>Special dietery details</th>
      <th>Price</th>
      <th>Street details</th>
      <th>Suburb</th>
      <th>State</th>
      <th>Country</th>
      <th>Postcode</th>
      <th>Picture</th>
      <th>Chef</th>
      <th>Buyer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dishes.each do |dish| %>
      <tr>
        <td><%= dish.dish_name %></td>
        <td><%= dish.description %></td>
        <td><%= dish.cuisine %></td>
        <td><%= dish.special_dietery_details %></td>
        <td><%= dish.price %></td>
        <td><%= dish.street_details %></td>
        <td><%= dish.suburb %></td>
        <td><%= dish.state %></td>
        <td><%= dish.country %></td>
        <td><%= dish.postcode %></td>
        <td><%= dish.picture %></td>
        <td><%= dish.chef_id %></td>
        <td><%= dish.buyer_id %></td>
        <td><%= link_to 'Show', dish %></td>
        <td><%= link_to 'Edit', edit_dish_path(dish) %></td>
        <td><%= link_to 'Destroy', dish, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

